{
  "manifest_version": 3,
  "name": "X.com Video Pause & Unmute",
  "version": "1.1",
  "description": "Keyboard controls for X.com videos. Press 'U' to toggle mute/unmute and 'Y' to pause/play the most visible video.",
  "permissions": [],
  "host_permissions": [
    "https://x.com/*",
    "https://*.x.com/*",
    "https://twitter.com/*",
    "https://*.twitter.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://*.x.com/*",
        "https://twitter.com/*",
        "https://*.twitter.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "X Video Pause & Unmute"
  }
}